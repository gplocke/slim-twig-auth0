{% extends 'backend/content/auth/layout.twig' %}

{% block title %}Secure Login{% endblock %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

<div class="ui middle aligned center aligned grid">
    <div class="column">
        <div id="root" style="width: 280px; margin: 40px auto; padding: 10px; border-style: dashed; border-width: 1px;">
    embeded area
        </div>
    </div>
</div>

{% endblock %}

{% block footer %}
    {{ parent() }}
    <script src="https://cdn.auth0.com/js/lock-8.2.min.js"></script>
    <script>
      
      var lock = new Auth0Lock('{{ KODEKOO_AUTH0_CLIENT_ID }}', '{{ KODEKOO_AUTH0_DOMAIN }}');
      
      
      lock.show({
          container: 'root'
        , callbackURL: '{{ KODEKOO_AUTH0_REDIRECT_URI }}'
        , responseType: 'code'
        , authParams: {
          scope: 'openid profile'
        }
      });
    </script>
{% endblock %}